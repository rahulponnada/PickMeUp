<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#000"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/clickme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:fontFamily="sans-serif-light"
            android:text="@string/clickme"
            android:textColor="#804000"
            android:textSize="20dp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/expandable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#000"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name: "
            android:id="@+id/fNameLabel"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="#ffc0c040" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="@string/hello_world"
            android:id="@+id/fName"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/fNameLabel"
            android:layout_toEndOf="@+id/fNameLabel"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Name: "
            android:id="@+id/lNameLabel"
            android:layout_below="@+id/fNameLabel"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="#ffc0c040" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="@string/hello_world"
            android:id="@+id/lName"
            android:layout_gravity="center_horizontal"
            android:layout_alignTop="@+id/lNameLabel"
            android:layout_toRightOf="@+id/lNameLabel"
            android:layout_toEndOf="@+id/lNameLabel" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address: "
            android:id="@+id/addressLabel"
            android:layout_below="@+id/lNameLabel"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="#ffc0c040" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="@string/hello_world"
            android:id="@+id/address"
            android:layout_gravity="center_horizontal"
            android:layout_alignTop="@+id/addressLabel"
            android:layout_toRightOf="@+id/addressLabel"
            android:layout_toEndOf="@+id/addressLabel" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Navigate"
            android:id="@+id/navigate"
            android:layout_below="@+id/addressLabel"
            android:layout_marginTop="10dp"
            android:layout_alignLeft="@+id/fName"
            android:layout_alignStart="@+id/fName"
            android:layout_marginLeft="50dp"
            android:background="#804000"
            android:textColor="#ff000000"
            android:layout_marginBottom="10dp" />

    </RelativeLayout>

</LinearLayout>